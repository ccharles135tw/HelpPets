@model IEnumerable<Pet.ViewModels.COrderView>

@{
    ViewData["Title"] = "List";
    Layout = "_BackLayout";
    qqqq.Models.我救浪Context db = new 我救浪Context();
}

@section Styles
{
    <style>
        .thHover:hover {
            cursor: pointer;
        }

        .spanPage {
            margin: 0 5px;
            cursor: pointer;
            color: dodgerblue;
        }

            .spanPage:hover {
                text-decoration-line: underline;
                color: red;
            }

            .spanPage.spanPageSelected {
                text-decoration-line: underline;
                color: red;
            }
        th {
            white-space: nowrap
        }

        #thead > tr > th {
            font-size: 18px;
            font-weight: 800;
            color: black;
        }

        #thead > tr {
            border: solid antiquewhite 2px;
            background-color: antiquewhite;
        }

        #tbody > tr {
            border: solid antiquewhite 2px;
            background-color: antiquewhite;
            font-size: 16px;
            font-weight: 600;
        }
    </style>
}<h1 style="text-align:center; font-weight:900">訂單管理系統</h1>
<div style="text-align:left; font-size:16px ; font-weight:600">
    <form action="@Url.Content("~/Order/Search")" id="searchForm">
        <label>關鍵字</label> <input type="text" value="@ViewBag.keyword" style="border-radius:30px;" name="keyword" id="keyword" />
        <label>價錢區間(總金額)</label><input type="number" name="PriceLow" style="width:80px; border-radius:15px;" value="@ViewBag.low" class="text-center" />~<input type="number" name="PriceHigh" style="width:80px;border-radius:15px;" value="@ViewBag.high" class="text-center" />(單位:元)
        <label>日期區間</label><input type="date" name="DateLow" value="@(ViewBag.datelow==null?null:ViewBag.datelow.ToString("yyyy-MM-dd"))" /><input type="date" name="DateHigh" value="@(ViewBag.datehigh==null?null:ViewBag.datehigh.ToString("yyyy-MM-dd"))" />
        <div style="display:inline-block;position:relative;top:15px" >
           
                @{
                    foreach (var os in db.OrderStatuses.ToList())
                    {
                        <label>@os.StatusType</label><input type="checkbox" value="@os.OrderStatusId" name="orderStatus" class="check-orderStatus" />
                    }
                }
            <br />
                <label>商品</label><input type="radio" value="False" name="isPet" />
                <label>浪浪</label><input type="radio" value="True" name="isPet" />
        </div>
            <button class="fa-solid fa-magnifying-glass" style=" border:none; background-color:transparent;"></button>
    </form>

    
</div>
<br />
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href='https://fonts.googleapis.com/css?family=Roboto:400,100,300,700' rel='stylesheet' type='text/css'>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/css/BK_style.css" rel="stylesheet" />
</head>
<body>
    <div class="row mb-5">
        <table class="table">
            <thead id="thead" style="text-align:center;">
                <tr style="font-size:20px">
                    <th>
                        @Html.DisplayNameFor(model => model.OrderId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MemberId)
                    </th>
                    @*<th>
                            @Html.DisplayNameFor(model => model.EmployeeId)
                        </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.OrderDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SendAddress)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OrderStatus)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OrderMoney)
                    </th>
                    <th colspan=3>
                        功能
                    </th>
                </tr>
            </thead>
            <tbody id="tbody" style="text-align:center;">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrderId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MemberId)
                            @item.order.Member.Name
                        </td>
                        @*<td>
                                @Html.DisplayFor(modelItem => item.EmployeeId)
                            </td>*@
                        <td>
                            @*@Html.DisplayFor(modelItem => ((DateTime)item.OrderDate).ToString("yyyy/MM/dd"))*@
                            @(((DateTime)item.OrderDate).ToString("yyyy/MM/dd"))
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SendAddress)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrderStatus)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrderMoney)
                        </td>
                        <td>
                            <button style="border:none; background-color:transparent;color:chocolate;font-size:16px" class="fa-solid fa-list btn-detail " OrderID=@item.OrderId></button>
                        </td>
                        <td>
                            @Html.ActionLink("", "Edit", "Order", new { id = item.OrderId }, new { Class = "fa-solid fa-wrench", @style = "color:chocolate;font-size:16px" })
                        </td>
                        <td>
                            @Html.ActionLink("", "Delete", "Order", new { id = item.OrderId }, new { Class = "fa-solid fa-trash-can", @style = "color:chocolate;font-size:16px", onclick = "return confirm('確定要刪除嗎')" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="row">
        <div id="divPage" style="border-radius:20px; margin:auto;border:2px solid black; text-align:center" class="col-12"></div>
    </div>
    <!-- Button trigger modal -->
    @*<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">

        </button>*@

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 style="font-weight:700;" class="modal-title" id="exampleModalLabel">訂單細項</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" onclick="$('#exampleModal').modal('hide')"></button>
                </div>
                <div class="modal-body">
                    <br />
                    <div id="txtDetail"></div>
                    <br />
                </div>

                <div class="modal-footer">
                    <button style="font-size:24px; color:chocolate; border:none;background-color:transparent" type="button" data-bs-dismiss="modal" onclick="$('#exampleModal').modal('hide')">關閉</button>
                    @*<button type="button" class="btn btn-primary">Save changes</button>*@
                </div>
            </div>
        </div>
    </div>

    @section Scripts{
        <script>
        $(".btn-detail").on("click", function()
        {
            $('#exampleModal').modal('show');
            $.post("@Url.Content("~/Order/Detail")", { id: $(this).attr("OrderID") }, function (data)
            {
                data = JSON.parse(data);
                //console.log(data);
                let txtDetail = $("#txtDetail");
                let txtTotalCost = $("#txtTotalCost");
                txtDetail.empty();
                txtTotalCost.empty();
                $.each(data, (index, ele) =>
                {

                    let productAction = $(document.createElement("a"));

                    productAction.attr("href", "@Url.Content("~/Product/SearchForID/")" + ele.ProductId);
                    productAction.text(ele.ProductName);
                    console.log(productAction);
                    txtDetail.append(productAction);
                    txtDetail.append(` :${ele.UnitPrice}NT$ * ${ele.Quantity}=${ele.Total}NT$ <br/>`);
                })
                $("#exampleModal").modal("show");
            })

         })
        </script>
        <script>
            //searchForm
        $(":radio[value=@ViewBag.isPet]").trigger("click");
        </script>
        @{//SearchForm
            if (ViewBag.orderStatus != null)
            {
                <script>
                    let a = @ViewBag.orderStatus;
                for (let index of a)
                {
                    $(`#searchForm .check-orderStatus[value=${index}]`).trigger("click");
                }
                </script>
            }
        }
        <script>
            //排序
            var sortMode = false;
            $("th").slice(0, 6).on("click", Sort).addClass("thHover");
            function Sort()
            {
                sortMode = !sortMode;
                let index = $(this).index();
                $("th").removeClass("bg-warning");
                $(this).addClass("bg-warning");
                let all = $("tbody tr");
                for (let i = 0; i < all.length; i++)
                {
                    let j = 0;

                    let preAll = all.eq(i).prevAll();

                    for (j = 0; j < preAll.length; j++)
                    {

                        let ele_price = all.eq(i).children("td").eq(index).text();
                        let pre_price = preAll.eq(j).children("td").eq(index).text();
                        if (isNaN(ele_price) == false)
                        {
                            ele_price = parseInt(ele_price);
                            pre_price = parseInt(pre_price);
                        }
                        if (sortMode == true)
                        {
                            if (ele_price >= pre_price)
                            {
                                all.eq(i).insertAfter(preAll.eq(j));
                                break;
                            }
                        }
                        else if (sortMode == false)
                        {
                            if (ele_price <= pre_price)
                            {
                                all.eq(i).insertAfter(preAll.eq(j));
                                break;
                            }
                        }
                    }
                    if (j == preAll.length)
                    {
                        all.eq(i).prependTo("tbody");
                    }
                }
                $("#divPage .spanPage").eq(0).trigger("click");
            }
        </script>
        <script>
            //Page
            let tr = $("tbody tr");
            let pageCount = Math.ceil(tr.length / 10);
            for (let i = 1; i <= pageCount; i++)
            {
                $("#divPage").append(`<span class="spanPage">${i}</span>`);
            }
            let spanPage = $("#divPage .spanPage");
            spanPage.on("click", function ()
            {
                tr = $("tbody tr");
                tr.hide();
                let index = 10 * $(this).text();
                spanPage.removeClass("spanPageSelected");
                $(this).addClass("spanPageSelected");
                tr.slice(index - 10, index).show();
                window.scrollTo({ top: 0, left: 0, behavior: "instant" })
            })
            spanPage.eq(0).trigger("click");

        </script>
    }

</body>
</html>