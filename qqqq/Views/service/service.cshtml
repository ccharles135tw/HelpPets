                            <span>台南</span>
                        </div>
                        <div class="team-social">
                            <a class="btn btn-square btn-light rounded-circle" href="https://ahipo.tainan.gov.tw/Default.aspx"><i class="fa fa-eye text-primary"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{ 
    <script>
    $(function () {
        let str = "";
        
        $.post('@Url.Content("~/service/getNews")', {}, (result) => {
            result.forEach(item => {
                str += `<tr><td><img src="${item.picture}" height="200" width="160" style="display:block; margin:auto;" class="imgdiv" /></td><td style="text-align:center;">${item.date}</td><td><a href="${item.source}" target="_blank" rel="noreferrer">${item.title}</a></td></tr>`;
            })
            $("load").fadeOut();
            $("#tbody").html(str);
        })
    })
    </script>
}