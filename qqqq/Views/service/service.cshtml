<div class="container-fluid  py-6 wow fadeIn" data-wow-delay="0.1s" style="background: linear-gradient(rgba(0, 0, 0, .3), rgba(0, 0, 0, .3)),url(../img/head-6.jpg) center center no-repeat; background-size: cover;">
    <div class="container text-center pt-5 pb-3">
        <h1 class="display-4 text-white animated slideInDown mb-3">最新消息</h1>
    </div>
</div>
@section Styles{
    <style>
        td>a:link {
            color: black;
        }
        td>a:visited {
            color: blue;
        }
        td>a:hover {
            color: #EAA636;
        }
        td {
            font-size: 25px;
        }

        th {
            font-size: 30px;
            text-align:center;
        }
        .imgdiv {
            transition: transform .2s;
            margin: 0 auto;
            flex: none;
            background-color: transparent;
            overflow: hidden;
        }

            .imgdiv:hover {
                transform: scale(2);
                background-color: transparent;
            }
    </style>
}

<div class="container-xxl py-3">
    <div>資料來源<a href="https://www.tcapo.gov.taipei/Default.aspx" style="color:blue;" target="_blank" rel="noreferrer">台北市動物保護處</a></div>
    <table class="table col-md-12">
        <thead>
            <tr>
                <th scope="col">圖</th>
                <th scope="col" class="col-md-2">發布日期</th>
                <th scope="col" class="col-md-7">標題</th>
            </tr>
        </thead>
        <tbody id="tbody">
            <tr id="load">
                <td></td>
                <td class="col-md-12" style="display:block; margin:auto;">
                    <img src="@Url.Content("~/img/loading.gif")" />
                </td>
                <td></td>
            </tr>
        </tbody>
    </table>
</div>
