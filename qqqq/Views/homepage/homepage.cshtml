<!-- Product Start -->
<div class="container-xxl bg-light my-6 py-4">
    <div class="container">
        <div class="bg-primary text-light rounded p-5 my-3 mt-0 wow fadeInUp" data-wow-delay="0.1s" style="border: 2px solid #1E1916;">
            <div class="row g-4 align-items-center">
                <div class="col-lg-6">
                    <h1 class="display-4 text-light mb-0" href="shopping.html">我救浪嚴選商品</h1>
                </div>
            </div>
        </div>
        <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;align-items:center">
            <h3 class="text-primary text-uppercase mb-2">//關於產品</h3>
            <p style="font-size:15px;font-weight:700;">從源頭把關食品用品安全，滿足毛孩也保毛孩健康</p>
        </div>
        <div class="row g-4">
            @{
                var list = db.Products.Where(p => p.IsPet == false).ToList();
                int totalCount = list.Count;
                float delay = 0.1f;
                for (int i = 0; i < 4; i++)
                {
                    delay += 0.3f;
                    Random r = new Random(DateTime.Now.Millisecond);
                    int index = r.Next(0, totalCount);
                    <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="@(delay)s" >
                        <div class="product-item flex-column bg-white rounded overflow-hidden h-80 d-flex" style="border: 2px solid #1E1916;">
                            <div class="text-center p-4">
                                <div class="d-inline-block border border-primary rounded-pill px-3 mb-3">$@(((decimal)list[index].Price).ToString("#"))元</div>
                                <p style="height:30px;" class="mb-1">@(list[index].ProductName)</p>
                            </div>
                            <div class="position-relative mt-auto">
                                <img style="width:100%;height:200px;" src="~/Images/@(list[index].Photos.Count==0?null:list[index].Photos.Where(ph=>ph.IsDefault==true).FirstOrDefault().PictureName)" alt="">
                                <div class="product-overlay">
                                    <a class="btn btn-lg-square btn-outline-light rounded-circle" href="~/shopping/showproduct/@(list[index].ProductId)"><i class="fa fa-eye text-primary"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                    list.RemoveAt(index);
                    totalCount--;
                }

            }
        </div>
    </div>
</div>
<!-- Product End -->
