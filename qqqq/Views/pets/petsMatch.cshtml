@section Scripts {

    <script>
        function alertlist() {
            Swal.fire(
                '成功',
                '您已更新條件',
                'success'
            )
        }
        function alertlist1() {
            Swal.fire(
                '保存原條件,將自動轉回寵物頁面'
            ), setTimeout(function () {
                location.href = "/homepage/homepage"
            }, 2000)
        }
        var swiper = new Swiper(".mySwiper", {
            effect: "coverflow",
            grabCursor: true,
            centeredSlides: true,
            slidesPerView: "auto",
            coverflowEffect: {
                rotate: 50,
                stretch: 0,
                depth: 100,
                modifier: 1,
                slideShadows: true,
            },
            pagination: {
                el: ".swiper-pagination",
            },
        });
    </script>

