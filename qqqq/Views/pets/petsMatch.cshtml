<div class="container-fluid  py-6 wow fadeIn" data-wow-delay="0.1s" style=" margin-bottom: 6rem; background: linear-gradient(rgba(0, 0, 0, .3), rgba(0, 0, 0, .3)),url(../img/head-1.jpg) center center no-repeat; background-size: cover;">
    <div class="container text-center pt-5 pb-3">
        <h1 class="display-4 text-white animated slideInDown mb-3">領養中心</h1>
    </div>
</div>
@section Styles{
    <style>
        #alert1 {
            font-family: "Open Sans", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen-Sans, Ubuntu, Cantarell, "Helvetica Neue", Helvetica, Arial, sans-serif;
        }
    </style>
}
<h1>
    符合條件約70%以上
</h1>
<h1>寵物</h1>
<div class="form-group">
    <div style="justify-content:flex-end;">
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
            調整清單
        </button>

        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content" style="display:flex;">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">配對條件</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="text-center">
                            種類: <select class="sorting mr-auto" style="margin-left: 10px; margin-right: 10px;">
                                <option value="1">狗</option>
                                <option value="1">貓</option>
                            </select>
                        </div>
                        <div class="text-center">
                            性別: <select class="sorting mr-auto" style="margin-left: 10px; margin-right:10px;">
                                <option value="1">不限</option>
                                <option value="1">公</option>
                                <option value="1">母</option>
                            </select>
                        </div>
                        <div class="text-center">
                            品種: <select class="sorting mr-auto" style="margin-left: 10px; margin-right:10px;">
                                <option value="1">不限</option>
                                <option value="1">瑪爾濟斯</option>
                                <option value="1">英國短毛</option>
                                <option value="1">法國鬥牛犬</option>
                            </select>
                        </div>
                        <div class="text-center">
                            毛色: <select class="sorting mr-auto" style="margin-left: 10px; margin-right:10px;">
                                <option value="1">不限</option>
                                <option value="1">黑</option>
                                <option value="1">黃</option>
                                <option value="1">白</option>
                            </select>
                        </div>
                        <div class="text-center">
                            結紮: <select class="sorting mr-auto" style="margin-left: 10px; margin-right:10px;">
                                <option value="1">不限</option>
                                <option value="1">是</option>
                                <option value="1">否</option>
                            </select>
                        </div>
                        <div class="text-center">
                            體型: <select class="sorting mr-auto" style="margin-left: 10px; margin-right:10px;">
                                <option value="1">不限</option>
                                <option value="1">大</option>
                                <option value="1">中</option>
                                <option value="1">小</option>
                            </select>
                        </div>
                        <div class="text-center">
                            年齡層: <select class="sorting mr-auto" style="margin-left: 10px; margin-right:10px;">
                                <option value="1">不限</option>
                                <option value="1">幼年</option>
                                <option value="1">成年</option>
                            </select>
                        </div>
                        <div class="text-center">
                            區域: <select class="sorting mr-auto" style="margin-left: 10px; margin-right:10px;">
                                <option value="1">不限</option>
                                <option value="1">台北</option>
                                <option value="1">高雄</option>
                                <option value="1">台中</option>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer " id="alert1">
                        <button type="button" class="btn btn-primary" onclick="alertlist()">調整清單</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <button class="btn btn-success">@Html.ActionLink("保持本來清單", "petsList", null)</button>
</div>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

@section Scripts {
<script>
    function alertlist() {
    Swal.fire(
        '成功',
        '您已更新條件',
        'success'
    )
    }

</script>

}
