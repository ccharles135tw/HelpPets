            <div class="form-group">
                <i class="fa-solid fa-paw"><label class="control-label">會員姓名</label></i>
                <input id="input" class="form-control" value="@user.Name"/>
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <i class="fa-solid fa-paw">
                    <label class="control-label">會員生日</label>
                </i>
                <input type="date" id="input"  class="form-control" asp-for="@user.BirthdayDate"/>
                <span class="text-danger"  ></span>
            </div>
            <div class="form-group">
                <i class="fa-solid fa-paw">
                    <label  class="control-label">會員手機號碼</label>
                </i>
                <input id="input" class="form-control" value="@user.MemberPhone" />
                <span  class="text-danger" ></span>
            </div>
            @*<div class="form-group">
                <i class="fa-solid fa-paw">
