            <div class="form-group">
                <i class="fa-solid fa-paw">
                    <label  class="control-label">居住城市</label>
                </i>
                <input id="input"  class="form-control" value="@user.City.CityName" />
                <span  class="text-danger"></span>
            </div>

            <div class="form-group">
                <i class="fa-solid fa-paw">
                    <label class="control-label">會員地址</label>
                </i>
                <input id="input"  class="form-control" value="@user.Address" />
