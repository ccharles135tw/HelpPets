@model IEnumerable<qqqq.ViewModels.CAdoptView>
<div class="container-fluid  py-6 wow fadeIn" data-wow-delay="0.1s" style=" margin-bottom: 6rem; background: linear-gradient(rgba(0, 0, 0, .3), rgba(0, 0, 0, .3)),url(../img/head-1.jpg) center center no-repeat; background-size: cover;">
    <div class="container text-center pt-5 pb-3">
        <h1 class="display-4 text-white animated slideInDown mb-3">領養中心</h1>
    </div>
</div>
@*@model Pet.ViewModels.CMemberView*@

@{
    ViewData["Title"] = "Edit";
    qqqq.Models.我救浪Context db = new 我救浪Context();
    CLoginViewModel memberview = null;
    if (Context.Session.Keys.Contains(CDictionary.SK_LOGIN_USER))
    {
        var b = Context.Session.GetString((CDictionary.SK_LOGIN_USER));
        memberview = JsonSerializer.Deserialize<CLoginViewModel>(b);
    }
    var user = db.Members.Where(m => m.MemberId == 52).FirstOrDefault();
}
@section Styles{
    <style>
        #input {
            border: solid antiquewhite 2px;
            border-radius: 20px;
            color: black;
            font-weight: 400;
            background-color: antiquewhite;
        }

        label {
            color: black;
            font-weight: 900;
        }

        #alert1 {
            font-family: "Open Sans", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen-Sans, Ubuntu, Cantarell, "Helvetica Neue", Helvetica, Arial, sans-serif;
        }
    </style>
}
<div>
    <h1 style="font-weight:900; text-align:center;">領養會員資料確認</h1>
</div>
<div style="text-align:right; margin-right:10px; text-decoration:none">
    <a style="color:#fff;border:none;background-color:#EAA636;padding:7px;cursor:pointer;user-select:none" href="~/pets/petsList"><i class="fa-solid fa-right-from-bracket fa-2">返回</i></a>
</div>
<hr />
<div class="row" style="padding-bottom:90px; display:flex;justify-content:center;align-items:center">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label  class="control-label"></label>
                <input id="input"  class="form-control" />
                <span  class="text-danger"></span>
            </div>

            <!--<div--> @*class="fa-solid fa-paw" *@
