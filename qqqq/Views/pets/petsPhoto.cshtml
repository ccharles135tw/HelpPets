
@model IEnumerable<qqqq.ViewModels.CProductShow>
<section class="section-margin--small mb-5">

    <!-- End Filter Bar -->
    <!-- Start Best Seller -->
    <section class="lattest-product-area pb-40 category-list">
        <div class="row">

            @foreach (var p in Model)
            {
                <div class="col-md-10 col-lg-4">
                    <div class="card text-center card-product">
                        <div class="card-product__img"  >
                            <img width="300" height="300" src="/Images/@p.Photos.FirstOrDefault()?.PictureName" alt=""  style="border:3px solid #EAA636;">
                            <div class="card-product__imgOverlay" style="display:block">
                                <h5 style="color:#000;">性別:母</h5>
                                <h5 style="color:#000;">體型:小</h5>
                                <h5 style="color:#000;">年齡層:幼年</h5>
                                <h5 style="color:#000;">@p.Description</h5>
                                    <button id="addToList" style=" background: #734226; border: none; border-radius: 10px;">
                                        <i class="fa-solid fa-list-alt"style="color:#fff;padding-right:5px;">@Html.ActionLink("詳細資料", "petsDetial", "pets")</i>
                                    </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <p>品種:@p.SubCategoryName</p>
                            <h4 class="card-product__title"><a href="/pets/petsDetial">@p.ProductName</a></h4>

                        </div>
                    </div>
                </div>  
                }
        </div>
    </section>
    <!-- End Best Seller -->

</section>
@section scripts{

}