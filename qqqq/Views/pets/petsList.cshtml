<div class="container-fluid  py-6 wow fadeIn" data-wow-delay="0.1s" style=" margin-bottom: 6rem; background: linear-gradient(rgba(0, 0, 0, .3), rgba(0, 0, 0, .3)),url(../img/head-1.jpg) center center no-repeat; background-size: cover;">
    <div class="container text-center pt-5 pb-3">
        <h1 class="display-4 text-white animated slideInDown mb-3">領養中心</h1>
    </div>
</div>


@{
    ViewData["Title"] = "petsList";
}

@*<div class="col-12 align-center">*@
<!-- Start Filter Bar -->

<div class="filter-bar d-flex flex-wrap align-items-center text-center">
    <div class="text-center ">

        <select class="sorting mr-auto" style="margin-left: 10px; margin-right: 10px;">
            <option value="1">狗</option>
            <option value="1">貓</option>
        </select>
    </div>
    <div>
        <select class="sorting mr-auto" style="margin-left: 10px; margin-right:10px;">
            <option value="1">米克斯</option>
            <option value="1">貴賓</option>
            <option value="1">哈士奇</option>
            <option value="1">馬爾濟斯</option>
            <option value="1">米格魯</option>
            <option value="1">英國短毛</option>
            <option value="1">藍貓</option>
            <option value="1">豹貓</option>
        </select>
    </div>
    <div>
        <div class="input-group filter-bar-search">
            <input type="text" placeholder="輸入關鍵字">
            @*<div class="input-group-append">*@
            <button type="button"><i class="fa-solid fa-magnifying-glass"></i></button>

            @*</div>*@
        </div>
    </div>


    <div class="sorting mr-auto">
        <button type="button" id="listRow" style="margin-left: 10px; border-color: rgba(246,135,4,0.5);"><i class="fa-solid fa-bars" style="color: rgb(246,135,4);"></i></button>
        <button type="button" id="listCol" style="margin-left: 10px; border-color: rgba(246,135,4,0.5);"><i class="fa-solid fa-table-cells" style="color: rgb(246,135,4);"></i></button>
    </div>
</div>

<div class="row col-12">
    <div class="col-md-3 alert col-sm-12 alert-light row">
        <div class="col-1"></div>
        <div class="col-11 sidebar-categories">
            <h2 class="head" style="text-align: center; letter-spacing:50px;font-size:30px">分類</h2>
            <ul class="card-product__title">
                <li>
                    <h4>狗</h4>
                    <ul class="single-search-product-wrapper">
                        <li>
                            <h5>狗品種</h5>
                            <ul class="child">
                                <li><input class="pixel-radio" type="radio" name="brand"/>哈士奇</li>
                                <li><input class="pixel-radio" type="radio" name="brand"/>米格魯</li>
                            </ul>
                        </li>
                        
                    </ul>
                </li>
                <li>
                    <h4>貓</h4>
                    <ul class="single-search-product-wrapper">
                        <li>
                            <h5>貓品種</h5>
                            <ul class="child">
                                <li><input class="pixel-radio" type="radio" name="brand">豹貓</li>
                                <li><input class="pixel-radio" type="radio" name="brand">藍貓</li>
                            </ul>
                        </li>
                      
                    </ul>
                </li>
            </ul>
        </div>
    </div>
    <div class="col-8" id="divAlert">
    </div>
    <div class="col-1 ">
        <ul class="navbar-dark list-unstyled float-right " style="position:fixed">
            <li>
                <button class="btn btn-secondary border-0"  style="width: 100%; background: rgba(244,126,1,0.8); "
                        data-container="body" data-toggle="popover" data-placement="right"
                        data-content="右側的 Popover 中的一些内容">
                    <i class="fa-solid fa-list-alt">佇列</i>
                </button><br />
            </li>
            <li><button style="width: 100%; background: rgba(244,126,1,0.8); " class="btn btn-secondary border-0" data-toggle="tooltip" data-placement="right"><i class="fa-solid fa-star">評估</i></button><br /></li>
            <li><button style="width: 100%; background: rgba(244,126,1,0.8); " class="btn btn-secondary border-0" data-toggle="tooltip" data-placement="right" title="回到頂端"><i class="fa-solid fa-circle-arrow-up">TOP</i></button><br /></li>
        </ul>


    </div>
</div>

@section scripts{
    <script>
           const divInfo= document.querySelector("#divAlert")
               $("#divAlert").load('@Url.Content("~/pets/petsPhoto")')
            $("#listRow").click(() => {
                $("#divAlert").load('@Url.Content("~/pets/petsPhotoRow")')
            })
            $("#listCol").click(() => {
                $("#divAlert").load('@Url.Content("~/pets/petsPhoto")')
            })
    </script>

}
