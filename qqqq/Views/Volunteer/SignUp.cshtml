                else {
                    $("#fullDay").removeAttr("disabled")
                    $("#morning").removeAttr("disabled")
                    $("#morningLabel").text("早上")
                }
                if (`${afternoonA}` == 0 && `${afternoonB}` == 0) {
                    $("#fullDay").attr("disabled", "disabled")
                    $("#afternoon").attr("disabled", "disabled")
                    $("#afternoonLabel").text("下午已滿")
                }
                else {
                    $("#fullDay").removeAttr("disabled")
                    $("#afternoon").removeAttr("disabled")
                    $("#afternoonLabel").text("下午")
                }
