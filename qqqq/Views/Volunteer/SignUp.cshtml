                } else if (afternoonA < 2) {
                    $("#aA").css("color", "red");
                }
                if (afternoonB == 0) {
                    $("#aB").css("color", "lightgray");
                } else if (afternoonB < 2) {
                    $("#aB").css("color", "red");
                }
                
