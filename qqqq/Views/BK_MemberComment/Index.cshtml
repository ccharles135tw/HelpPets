@model IEnumerable<qqqq.ViewModels.BK_MemberCommentViewModel>

@{
    ViewData["Title"] = "會員評論";
    Layout = "_BackLayout";
}
@section Styles{
    <style>
        #thead > tr > th {
            font-size: 18px;
            font-weight: 800;
            color: black;
        }

        #thead > tr {
            border: solid antiquewhite 2px;
            background-color: antiquewhite;
        }

        #tbody > tr {
            border: solid antiquewhite 2px;
            background-color: antiquewhite;
            font-size: 16px;
            font-weight: 600;
        }
    </style>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href='https://fonts.googleapis.com/css?family=Roboto:400,100,300,700' rel='stylesheet' type='text/css'>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/css/BK_style.css" rel="stylesheet" />
}

<h1 style="text-align:center; font-weight:900;">會員評論</h1>

<div style="text-align:left; font-size:16px ; font-weight:600">
    @using (Html.BeginForm())
    {
        @:關鍵字 @Html.TextBox("txtKeyword", (object)@ViewBag.keyword, new { @style = "border-radius:30px;" })
        <button class="fa-solid fa-magnifying-glass" style=" border:none; background-color:transparent;"></button>

        @*<a asp-action="Create" class="fa-solid fa-user-plus" style="margin-top:8PX; float:right;font-size:20px;color:chocolate;"> 新增??</a>*@
    }
</div>
<br />
<div class="row mb-5">
    <table class="table">
        <thead id="thead" style="text-align:center;">
            <tr style="font-size:20px">
                <th hidden>
                    @Html.DisplayNameFor(model => model.CommentId)
                </th>
                <th hidden>
                    @Html.DisplayNameFor(model => model.ProductId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MemberId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Grade)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CommentDate)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody id="tbody" style="text-align:center;">
            @foreach (var item in Model)
            {
            <tr>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.CommentId)
                </td>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.ProductId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MemberId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Grade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CommentDate)
                </td>
                <td>
                    @*@Html.ActionLink("", "Edit", new { /* id=item.PrimaryKey */ }, new { Class = "fa-solid fa-wrench", @style = "color:chocolate;font-size:16px" }) |
                    @Html.ActionLink("", "Details", new { /* id=item.PrimaryKey */ }, new { Class = "fa-solid fa-list", @style = "border:none; background-color:transparent;color:chocolate;font-size:16px" }) |*@
                    @Html.ActionLink("", "Delete", new { /* id=item.PrimaryKey */ }, new { Class = "fa-solid fa-trash-can", @style = "color:chocolate;font-size:16px", onclick = "return confirm('請確認是否要刪除?')" })
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>

