@model IEnumerable<Pet.ViewModels.CMemberView>

@{
    ViewData["Title"] = "List";
    Layout = "_BackLayout";
}
@section Styles{
    <style>
        #thead > tr > th {
            font-size: 18px;
            font-weight: 800;
            color: black;
        }

        #thead > tr {
            border: solid antiquewhite 2px;
            background-color: antiquewhite;
        }

        #tbody > tr {
            border: solid antiquewhite 2px;
            background-color: antiquewhite;
            font-size: 16px;
            font-weight: 600;
        }
    </style>
}
<h1 style="text-align:center; font-weight:900">會員管理系統</h1>
<div style="text-align:left; font-size:16px ; font-weight:600">
    <form method="post" action="@Url.Content("~/BK_member/KeyWord")">
        
        關鍵字<input type="text" value="@ViewBag.keyword" name="keyword" />
        <button class="fa-solid fa-magnifying-glass" style=" border:none; background-color:transparent;"></button>
       
        <a asp-action="Create" class="fa-solid fa-user-plus" style="margin-top:8PX; float:right;font-size:20px;color:chocolate;">新增會員</a>
    </form>
</div>
<br />

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href='https://fonts.googleapis.com/css?family=Roboto:400,100,300,700' rel='stylesheet' type='text/css'>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/css/BK_style.css" rel="stylesheet" />
</head>
<body>
    <div class="row mb-5">
        <table class="table">
            <thead id="thead" style="text-align:center;">
                <tr style="font-size:20px">
                    <th hidden>
                        @Html.DisplayNameFor(model => model.MemberID)
                    </th>
                    <th>
                        序號
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Photo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.GenderType)
                    </th>
                    <th hidden>
                        @Html.DisplayNameFor(model => model.HgenderId)
                    </th>
                    @*<th>
                            @Html.DisplayNameFor(model => model.Password)
                        </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.MemberPhone)
                    </th>
                    @*<th>
                            @Html.DisplayNameFor(model => model.Address)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.CityName)
                        </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.BirthdayDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th colspan=3>
                    </th>

                </tr>
            </thead>
            <tbody id="tbody" style="text-align:center;">
                @{int count = 0;
                    foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td hidden>
                                @Html.DisplayFor(modelItem => item.MemberID)
                            </td>
                            <td>
                                @count
                            </td>
                            <td>
                                @{
                                    if (item.Member.Photo != null)
                                    {
                                        <img src="~/Images/@item.Member.Photo" style="border-radius:50% ; height:75px ; width:75px" />
                                    }
                                    else
                                    {
                                        <img src="~/Images/Default.jpg" style="border-radius:50% ; height:75px ; width:75px" />
                                    }
                                }
                            </td>
                            <td class="Name@(item.MemberID)">
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>

                            <td class="GenderType@(item.MemberID)">
                                @Html.DisplayFor(modelItem => item.GenderType)
                            </td>

                            <td class="Password@(item.MemberID)" hidden>
                                @Html.DisplayFor(modelItem => item.Password)
                            </td>
                            <td class="MemberPhone@(item.MemberID)">
                                @Html.DisplayFor(modelItem => item.MemberPhone)
                            </td>
                            <td class="Address@(item.MemberID)" hidden>
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>

                            <td class="CityName@(item.MemberID)" hidden>
                                @Html.DisplayFor(modelItem => item.CityName)
                            </td>
                            <td class="BirthdayDate@(item.MemberID)">
                                @Html.DisplayFor(modelItem => item.BirthdayDate)

                            </td>
                            <td class="Email@(item.MemberID)">
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                <button data-toggle="modal" data-target="#myModal" Class="fa-solid fa-list detail" id="@item.MemberID"
                                        style="border:none; background-color:transparent;color:chocolate;font-size:16px">
                                    @*@Html.ActionLink("", "Detail", "Member", new { id = item.MemberID }, new { Class = "fa-solid fa-list" })*@
                                </button>
                            </td>
                            <td>
                                @Html.ActionLink("", "Edit", "BK_member", new { id = item.MemberID }, new { Class = "fa-solid fa-wrench", @style = "color:chocolate;font-size:16px" })
                            </td>
                            <td>
                                @Html.ActionLink("", "Delete", "BK_member", new { id = item.MemberID }, new { Class = "fa-solid fa-trash-can", @style = "color:chocolate;font-size:16px", onclick = "return confirm('請確認是否要刪除?')" })
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content" style="background-color:wheat" font-family:標楷體>
                <div class="modal-header" style="display: flex; justify-content: center; align-items: center;">
                    <h3 style="display:flex; font-weight:900; color:black; ">會員資料明細</h3>
                </div>
                <div class="modal-body" style="background-color:antiquewhite;text-align:center;font-weight:400">
                    @*<div id="LigationId" hidden></div>*@

                    <div id="Name"></div>
                    <div id="GenderType"></div>
                    <div id="MemberPhone"></div>
                    <div id="Password"></div>
                    <div id="BirthdayDate"></div>
                    <div id="Email"></div>
                    <div id="CityName"></div>
                    <div id="Address"></div>


                </div>
                <div class="modal-footer" style="background-color:wheat">
                    <button type="button" style="color:chocolate; border:none;background-color:transparent" class="fa-solid fa-right-from-bracket" data-dismiss="modal"> 返回</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

@section Scripts{
    <script>
        $(".detail").click((event) => {
            let id = event.target.id.replace(/[^0-9]/ig, "")
            console.log(id);
            $("#Name").html(`姓名:${$(`.Name${id}`).text()}`)
            $("#GenderType").html(`性別:${$(`.GenderType${id}`).text()}`)
            $("#MemberPhone").html(`手機:${$(`.MemberPhone${id}`).text()}`)
            $("#Password").html(`密碼:${$(`.Password${id}`).text()}`)
            $("#Address").html(`地址:${$(`.Address${id}`).text()}`)
            $("#CityName").html(`城市:${$(`.CityName${id}`).text()}`)
            $("#BirthdayDate").html(`生日:${$(`.BirthdayDate${id}`).text()}`)
            $("#Email").html(`電子郵件:${$(`.Email${id}`).text()}`)
        })
    </script>
}



