<!DOCTYPE html>



    <div class="divbody">
        <div class="container">
            <!-- chat box -->
            <div class="chat-box">
                <!-- client -->
                <div class="client">
                    <img src="~/img/cat.png" alt="logo" />
                    <div class="client-info">
                        <h2>Thanos</h2>
                        <p>online</p>
                    </div>
                </div>

                <!-- main chat section -->
                <div class="chats">
                    <div class="client-chat">Hi!</div>
                    <div class="my-chat">Hi!</div>
                    <div class="client-chat">How can i help you?</div>
                    <div class="my-chat">How you create this chat box?</div>
                    <div class="client-chat">Watch complete video for your answer.</div>
                </div>

                <!-- input field section -->
                <div class="chat-input">
                    <input type="text" placeholder="Enter Message" />
                    <button class="send-btn">
                        <img src="~/img/home/send.png" alt="send-btn" />
                    </button>
                </div>
            </div>

            <!-- button -->
            <div class="chat-btn">
                <img src="~/img/home/Circle-icons-chat.svg.png" alt="chat box icon btn" />
            </div>
        </div>
    </div>
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" referrerpolicy="no-referrer"></script>
    <script src="jquery-3.4.1.min.js"></script>
    <script src="script.js"></script>
    <script>
        $(document).ready(() => {
            $(".chat-btn").click(() => {
                $(".chat-box").slideToggle("slow")
            })
        })
    </script>

