}

@ViewData["Title"] = "MemberEdoit";

<link href="~/css_Q/css/bootstrap.min.css" rel="stylesheet" />



<link href="~/css_Q/css/style.css" rel="stylesheet" />

<style>


    /*
    *
    * ==========================================
