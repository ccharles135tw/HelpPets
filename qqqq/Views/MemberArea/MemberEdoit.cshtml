<div class="container-fluid  py-6 wow fadeIn" data-wow-delay="0.1s" style=" margin-bottom: 6rem; background: linear-gradient(rgba(0, 0, 0, .3), rgba(0, 0, 0, .3)),url(../img/head-5.jpg) center center no-repeat; background-size: cover;">
    <div class="container text-center pt-5 pb-3">
        <h1 class="display-4 text-white animated slideInDown mb-3">編輯會員資料</h1>
    </div>
</div>

<header class="header">
    <nav class="navbar navbar-expand-lg navbar-light py-3">
        <div class="container">
            <!-- Navbar Brand -->
            @*<a href="#" class="navbar-brand">
                    <img src="https://bootstrapious.com/i/snippets/sn-registeration/logo.svg" alt="logo" width="150">
                </a>*@
        </div>
    </nav>
</header>


<div class="container">
    <div class="row py-5 mt-4 align-items-center">
        <!-- For Demo Purpose -->
        <div class="col-md-5 pr-lg-5 mb-5 mb-md-0">
            <img src="@Url.Content($"~/Images/{Model.Photo}")" alt="" id="memberPicture" class="img-fluid mb-3 d-none d-md-block" />

            <h1>編輯會員資料</h1>
            <p class="font-italic text-muted mb-0">如需修改姓名及電子郵件</p>
            <p class="font-italic text-muted">
                了解詳情 <a href="#我就浪首頁" class="text-muted">
                    <u>我就浪首頁</u>
                </a>
            </p>
        </div>

        <!-- Registeration Form -->
        <div class="col-md-7 col-lg-6 ml-auto">
            <form asp-action="MemberArea" enctype="multipart/form-data">
                <!-- hidden -->
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" hidden>
                    <input name="MemberID" class="form-control" />
                </div>


                <div class="row">

                    <!-- Name -->

                    <div class="input-group col-lg-6 mb-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-white px-4 border-md border-right-0">
                                <i class="fa fa-user text-muted"></i>
                            </span>
                        </div>
                        <input value="@Model.Name" id="firstName" type="text" asp-for="Name" placeholder="姓名" class="form-control bg-white border-left-0 border-md" readonly>


                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>

                    <!-- Last Name
    <div class="input-group col-lg-6 mb-4">
        <div class="input-group-prepend">
            <span class="input-group-text bg-white px-4 border-md border-right-0">
                <i class="fa-solid fa-location-dot"></i>
            </span>
        </div>
        <input id="lastName" type="text" name="lastname" placeholder="Last Name" class="form-control bg-white border-left-0 border-md">
    </div>-->
                    <!-- Email Address -->
                    <div class="input-group col-lg-12 mb-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-white px-4 border-md border-right-0">
                                <i class="fa fa-envelope text-muted"></i>
                            </span>
                        </div>
                        <input value="@Model.Email" id="email" type="email" name="Email" placeholder="Email " class="form-control bg-white border-left-0 border-md" readonly>
                    </div>

                    <!-- Password -->
                    <div class="input-group col-lg-6 mb-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-white px-4 border-md border-right-0">
                                <i class="fa fa-lock text-muted"></i>
                            </span>
                        </div>

                        <input id="password" type="password" asp-for="Password" placeholder="密碼" class="form-control bg-white border-left-0 border-md">

                    </div>

                    <!-- Password Confirmation -->
                    <div class="input-group col-lg-6 mb-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-white px-4 border-md border-right-0">
                                <i class="fa-solid fa-eye" id="seePwd"></i>
                            </span>
                        </div>
                        <input id="passwordConfirmation" type="password" asp-for="PasswordConfirm" placeholder="再次輸入密碼" class="form-control bg-white border-left-0 border-md">
                    </div>

                    <!-- phone -->
                    <div class="input-group col-lg-12 mb-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-white px-4 border-md border-right-0">
                                <i class="fa fa-phone-square text-muted"></i>
                            </span>
                        </div>
                        <input value="@Model.MemberPhone" asp-for="MemberPhone" id="MemberPhone" type="text" placeholder="手機號碼" class="form-control bg-white border-left-0 border-md">
                    </div>
                    <!--  address -->
                    <div class="input-group col-lg-12 mb-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-white px-4 border-md border-right-0">
                                <i class="fa-solid fa-location-dot"></i>
                            </span>
                        </div>
                        <select id="selCity" asp-for="MemberCityId" style="max-width: 100px" class="custom-select form-control bg-white border-left-0 border-md h-100 font-weight-bold text-muted" name="CityId">
                            <option value="@Model.MemberCityId"></option>
                        </select>
                        <input value="@Model.Address" id="Address" type="tel" asp-for="Address" placeholder="地址" class="form-control bg-white border-md border-left-0 pl-3">
                    </div>
                    <!-- birthday -->
                    <div class="input-group col-lg-12 mb-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-white px-4 border-md border-right-0">
                                <i class="fa-solid fa-calendar-days"></i>
                            </span>
                        </div>
                        <input value="@Model.BirthdayDate" type="date" name="BirthdayDate" class="form-control bg-white border-left-0 border-md" />

                    </div>
            

                    <!-- gender -->
                    <div class="input-group col-lg-12 mb-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-white px-4 border-md border-right-0">
                                <i class="fa-solid fa-genderless"></i>
                            </span>
                        </div>
                        <select asp-for="HgenderId" style="max-width: 100px" class="custom-select form-control bg-white border-left-0 border-md h-100 font-weight-bold text-muted">
                            <option value="1">男性</option>
                            <option value="2">女性</option>
                            <option>不透露</option>
                        </select>

                    </div>

                    <!-- photo -->
                    <div class="input-group col-lg-12 mb-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-white px-4 border-md border-right-0">
                                <i class="fa fa-envelope text-muted"></i>
                            </span>
                        </div>
                        <input type="file" value="會員頭貼上傳" name="File" class="form-control" id="File" />
                    </div>

                    <input hidden name="Photo" class="form-control" />




                    <!-- Submit Button -->
                    <div class="form-group col-lg-12 mx-auto mb-0">
                        <input id="editMem" type="submit" value="編輯會員資料" class="btn btn-primary btn-block py-2">
                        <span class="font-weight-bold"></span>

                    </div>

                   
                    <!-- Already Registered -->
                    <div class="text-center w-100">
                        <p class="text-muted font-weight-bold"> @Html.ActionLink("取消編輯", "MemberArea", "MemberArea")</p>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://kit.fontawesome.com/45dc82861e.js" crossorigin="anonymous"></script>
    <script>
        // For Demo Purpose [Changing input group text on focus]
        $(function () {
            $('input, select').on('focus', function () {
                $(this).parent().find('.input-group-text').css('border-color', '#80bdff');
            });
            $('input, select').on('blur', function () {
                $(this).parent().find('.input-group-text').css('border-color', '#ced4da');
            });
        });

    </script>
    <script>

    const selCity = document.querySelector("#selCity");

    async function loadCity() {
        const response = await fetch('@Url.Content("~/Home/city")');
        const data = await response.json();
        const objData= JSON.parse(data)
       objData.forEach(city => {
            const opt = new Option(city.cityName, city.cityId);
            console.log(opt);
            selCity.options.add(opt);


        })
    }
    loadCity();
    </script>
    <script>
        $("#File").on("change", function () {

            readURL(this);
        })
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $("#memberPicture").attr("src", e.target.result);
                    //div.append(`<img src="${e.target.result}" style="width:150px"/>`);
                    //$("#preview_progressbarTW_img").attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
    <script>
        let flag = false;

        $(function () {
            $("#seePwd").click(function () {
                if (flag == true)
                    flag = false;
                else
                    flag = true;

                if (flag == true) {
                    $("#password").attr("type", "text");
                    $("#passwordConfirmation").attr("type", "text");
                } else {
                    $("#password").attr("type", "password");
                    $("#passwordConfirmation").attr("type", "password");
                }
            })
        });
    </script>
    <script>
        $("#editMem").click(function () {
            confirm("修改完成");

        })


    </script>
}
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

